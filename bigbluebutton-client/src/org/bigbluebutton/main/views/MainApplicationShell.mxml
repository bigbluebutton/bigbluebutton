			private function redirectToLogoutUrl ():void {
        		var logoutURL:String = BBB.getLogoutURL();
				var request:URLRequest = new URLRequest(logoutURL);
				LOGGER.debug("Logging out to: {0}", [logoutURL]);
				navigateToURL(request, '_self');
			}
			

