<mx:TitleWindow xmlns:mx="http://www.adobe.com/2006/mxml" 
                xmlns:mate="http://mate.asfusion.com/"
    showCloseButton="false"
    verticalScrollPolicy="off"
    horizontalScrollPolicy="off"
    horizontalAlign="center" 
    borderAlpha="0.0"
    borderThicknessLeft="0" 
    borderThicknessRight="0"
    borderThicknessTop="0"
    x="20"
    y="-20">
  
	<mate:Listener type="{WebRTCMediaEvent.WEBRTC_MEDIA_SUCCESS}" method="handleWebRTCMediaSuccessEvent" />
	<mate:Listener type="{WebRTCMediaEvent.WEBRTC_MEDIA_FAIL}" method="handleWebRTCMediaFailEvent" />
  
	<mx:Script>
		<![CDATA[
			import mx.managers.PopUpManager;
			
			import org.bigbluebutton.modules.phone.events.UseFlashModeCommand;
			import org.bigbluebutton.modules.phone.events.WebRTCMediaEvent;
			import org.bigbluebutton.util.i18n.ResourceUtil;

			private function handleWebRTCMediaSuccessEvent(e:WebRTCMediaEvent):void {
				PopUpManager.removePopUp(this);
			}
			
			private function handleWebRTCMediaFailEvent(e:WebRTCMediaEvent):void {
				PopUpManager.removePopUp(this);
			}

			private function connectUsingFlashClicked():void {
				dispatchEvent(new UseFlashModeCommand());
				PopUpManager.removePopUp(this);
			}
		]]>
	</mx:Script>
  
  <mx:VBox width="100%" height="100%"  paddingBottom="5" paddingLeft="5" paddingRight="5" paddingTop="5">
     <mx:TextArea borderSkin="{null}"
                  editable="false"
                  text="{ResourceUtil.getInstance().getString('bbb.firefoxChangeMic.change')}"
                  styleName="micSettingsWindowTitleStyle"
                  width="400"
                  left="0"/>
    <mx:HBox width="100%">      
      <mx:Text width="100%" text="{ResourceUtil.getInstance().getString('bbb.firefoxChangeMic.chooseAndSelect')}"
               styleName="micSettingsWindowSpeakIntoMicLabelStyle" />		
      <mx:Image source="@Embed('assets/ff-share-mic.png')"/>	
    </mx:HBox>
    <mx:HBox width="100%">
      <mx:Text width="100%" text="{ResourceUtil.getInstance().getString('bbb.firefoxChangeMic.dontSee')}"
               styleName="micSettingsWindowHearFromHeadsetLabelStyle"/>	
      <mx:Image source="@Embed('assets/ff-show-mic.png')"/>
    </mx:HBox>
    <mx:HRule width="100%"/>
    <mx:HBox width="100%" horizontalAlign="right" horizontalGap="18" paddingTop="10">
      <mx:Text width="100%" text="{ResourceUtil.getInstance().getString('bbb.firefoxChangeMic.joinUsingFlash')}"
               styleName="micSettingsWindowSpeakIntoMicLabelStyle" />		
      <mx:Button id="noButton" 
                 label="{ResourceUtil.getInstance().getString('bbb.firefoxChangeMic.connectUsingFlash')}" 
                 styleName="micSettingsWindowPlaySoundButtonStyle"
                 click="connectUsingFlashClicked()" 
                 toolTip=""/>
    </mx:HBox>
  </mx:VBox>		

</mx:TitleWindow> 
